{

  "Serilog": {
    "Using": [ "Serilog.Sinks.File", "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Debug", // Only show important logs for framework
        "System": "Debug",
        "YourProjectName": "Information" // Show detailed logs for your app
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "../YourProjectName.Infrastructure/Logs/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  

  "ConnectionStrings": {
    "DefaultConnection": "Server=.;Database=YourDatabaseName;TrustServerCertificate=True;"
  },

  "AllowedHosts": "*",

   "JWT": {
      "Secret": "",
      "Issuer": "YourProjectName.API",
      "Audience": "YourProjectName.API",
      "ExpiryInMinutes": 60
} }
